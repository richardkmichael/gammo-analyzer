#!/usr/bin/env ruby

require "gammo_analyzer"
require "gammo_analyzer/cli"
cli = GammoAnalyzer::CLI.new

# Setup which can only happen after we've received options from the user.
require "gammo_analyzer/initialize"

require "gammo_analyzer/report_builder"
report_builder = GammoAnalyzer::ReportBuilder.new cli.configuration

puts report_builder.summary

cli.console if cli.interactive
